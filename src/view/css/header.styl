#header
	height header-height
	line-height header-height
	background-color header-bg-color
	overflow hidden
	transition left default-animation-speed ease, right default-animation-speed ease
	position fixed
	top 0
	left 0
	right 0

	h1
		float right
		font-size 20px
		font-weight bold
		color header-color
		margin 1px 12px 0 0
		line-height header-height
		text-shadow #000 0px 0px 2px

#toggle-library-pane
	font-size 20px
	line-height header-height
	margin-left 6px
	transition -webkit-transform .6s ease

#app.library-pane-expanded
	#header
		left library-pane-width
	#toggle-library-pane
		-webkit-transform rotate(180deg)